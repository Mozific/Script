    Theme = "Ocean",
    DisableRayfieldPrompts = false,
    DisableBuildWarnings = false,
    ConfigurationSaving = {
        Enabled = true,
        FolderName = nil,
        FileName = "ApertureHub"
    },
    KeySystem = true,
    KeySettings = {
        Title = "Enter Access code",
